RewriteEngine on
RewriteCond %{HTTP_HOST} ^jillcookauctioneer.com$ [NC,OR]
RewriteCond %{HTTP_HOST} ^www.jillcookauctioneer.com$
RewriteCond %{REQUEST_URI} !public_html/
RewriteRule (.*) /public_html/$1 [L]

# this forces SSL connection
RewriteCond %{HTTPS} !=on
RewriteRule (.*) https://jillcookauctioneer.com/$1 [L]